pipeline {
    agent any
    
    stages {
        stage('Check Python Availability') {
            steps {
                sh 'which python || echo "python not found"'
                sh 'python --version || echo "python3 not installed"'
            }
        }
        
        stage('Clone Project') {
            steps {
                git branch: 'main', url: 'https://github.com/ibrahimabukush/team19.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'pip install --user --force-reinstall -r requirements.txt'
            }
        }
        
        stage('Apply Migrations') {
            steps {
                sh 'python manage.py makemigrations'
                sh 'python manage.py migrate'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'python manage.py test'
            }
        }
        
        stage('Run Server (Optional)') {
            steps {
                sh 'nohup python manage.py runserver 0.0.0.0:8000 &'
            }
        }
    }
}
